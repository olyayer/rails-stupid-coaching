
<!-- action specifies the url that will be used when submitting the form
name enables you to name each parameter corresponding to each input of the form
 -->
<p>Ask your coach anything</p>

<form action="/answer" method="get" class='form-inline'>
  <div class='input-group input-group-lg'>
    <input type="text" name="question" class="form-control" placeholder="say something">
    <span class="input-group-btn">
      <input type="submit" value="Ask!" class="btn btn-primary">
    </span>
  </div>
</form>


